<h1>Eat Da Burger!</h1>

<h2>Burgers available to be devoured!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
            {{burger_name}}

            <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
            </button>

            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers already devoured!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
            {{burger_name}}

            <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
            </button>

            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>
